pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
             sh 'make'
                echo 'Building The Application..'
            }
        }
        stage('Test') {
            steps {
            sh 'make check'
                junit 'reports/**/*.xml'
                echo 'Testing The Application..'
            }
        }
        stage('Deploy') {
            steps {
            sh 'make publish'
                echo 'Deploying The Application....'
            }
        }
    }
}
